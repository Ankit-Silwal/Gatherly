{
  "name": "Gatherly",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "bun run --workspaces --parallel --if-present dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/node": "^25.3.0",
    "@types/pg": "^8.16.0",
    "node": "^25.6.1",
    "pg": "^8.18.0"
  }
}
